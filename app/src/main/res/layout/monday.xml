<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:background="@color/green">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/rightbtn"
            android:background="@null"
            android:clickable="false"/>
        <TextView
            android:text="@string/Mon_text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:id="@+id/ttdHeader"
            android:layout_gravity="center"
            android:gravity="bottom|center_horizontal"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/leftbtn"
            android:background="@drawable/right" />
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:background="#F0F0F0">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:textAllCaps="false"
                android:text="7:30AM - 8:30AM\n\nPre-conference workshop"
                android:id="@+id/b2"
                android:layout_marginBottom="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:textColor="#5A6C64"
                android:paddingLeft="120dp"
                android:gravity="top"
                android:background="@drawable/microphone" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text="8:30am - 12:30pm\n\nBOLD"
                android:id="@+id/b3"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/b2"
                android:paddingLeft="120dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textColor="#5A6C64"
                android:background="@drawable/microphone" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:textAllCaps="false"
                android:text="8:30AM - 12:30PM\n\nProtocols for Next-Generation Sequencing\n"
                android:id="@+id/b4"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/b3"
                android:paddingLeft="120dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textColor="#5A6C64"
                android:background="@drawable/microphone" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:textAllCaps="false"
                android:text="12:30PM - 2:00PM\n\nLunch"
                android:id="@+id/b5"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/b4"
                android:paddingLeft="120dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textColor="#5A6C64"
                android:background="@drawable/btn" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:textAllCaps="false"
                android:text="2:00PM - 5:30PM\n\nFormation of the International Society for the Barcode of Life"
                android:id="@+id/b6"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/b5"
                android:paddingLeft="120dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textColor="#5A6C64"
                android:background="@drawable/microphone"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:textAllCaps="false"
                android:text="5:30PM - 8:30PM\n\nOpening Welcome"
                android:id="@+id/b7"
                android:layout_below="@+id/b6"
                android:paddingLeft="120dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textColor="#5A6C64"
                android:background="@drawable/microphone"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>